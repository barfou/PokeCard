<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="CardViewStyle" parent="CardView">
        <item name="cardCornerRadius">4dp</item>
        <item name="cardElevation">10dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:background">@drawable/recycler_cardview_background</item>
    </style>
    <style name="RecyclerItemStyle">
        <item name="android:background">@drawable/recycler_item_background</item>
    </style>
    <style name="TextViewTitle">
        <item name="android:fontFamily">@font/ming</item>
    </style>
    <style name="TextViewLabel">
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/chunk_five_regular</item>
    </style>
    <style name="TextViewInfo">
        <item name="android:textStyle">normal</item>
    </style>
    <style name="DefaultBackground">
        <item name="android:background">@drawable/default_background</item>
    </style>
    <style name="LoginBackground">
        <item name="android:alpha">0.95</item>
        <item name="android:background">@drawable/pokemon_wallpaper_3</item>
    </style>
    <style name="CircularCardviewBackground">
        <item name="android:background">@color/circular_cardview_background</item>
    </style>
    <style name="ButtonAccueil">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/signika_regular</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="TextViewAppTitle">
        <item name="android:fontFamily">@font/permanent_marker_regular</item>
        <item name="android:textSize">45sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="EditTextStyle">
        <item name="android:background">@drawable/edittext_background</item>
        <item name="android:drawablePadding">20dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="android:fontFamily">@font/signika_regular</item>
    </style>

</resources>
